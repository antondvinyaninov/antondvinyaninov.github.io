---
import type { Post } from '../data/posts';
import { Clock, Eye } from 'lucide-react';

interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<article class="relative w-full h-[500px] rounded-3xl overflow-hidden group shadow-2xl shadow-slate-200/50">
  <img 
    src={post.coverImage} 
    alt={post.title} 
    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 via-slate-900/40 to-transparent"></div>
  
  <div class="absolute bottom-0 left-0 p-8 md:p-12 w-full md:w-2/3">
    <div class="flex items-center gap-3 mb-4">
      <span class={`px-3 py-1 rounded-full text-xs font-semibold uppercase tracking-wider ${post.category.color} bg-white/90 backdrop-blur-sm`}>
        {post.category.name}
      </span>
      <span class="text-slate-300 text-sm font-medium flex items-center gap-1">
         <Clock className="w-4 h-4" /> {post.readTime}
      </span>
    </div>
    
    <h2 class="text-3xl md:text-5xl font-bold text-white leading-tight mb-4 group-hover:text-slate-100 transition-colors">
      <a href={`/blog/${post.slug}`}>
        {post.title}
      </a>
    </h2>
    
    <p class="text-slate-200 text-lg md:text-xl line-clamp-2 mb-6 font-light">
      {post.excerpt}
    </p>
    
    <div class="flex items-center gap-4">
      <img src={post.author.avatar} alt={post.author.name} class="w-10 h-10 rounded-full border-2 border-white/20" />
      <div>
        <p class="text-white font-medium text-sm">{post.author.name}</p>
        <p class="text-slate-400 text-xs">{post.date}</p>
      </div>
    </div>
  </div>
</article>
