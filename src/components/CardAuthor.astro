---
import type { Author } from '../consts';
import { ArrowRight } from 'lucide-react';

interface Props {
  author: Author;
}

const { author } = Astro.props;
---

<a href={`/authors/${author.id}`} class="group flex items-center gap-4 p-4 rounded-2xl border border-slate-100 bg-white hover:border-slate-200 hover:shadow-lg hover:shadow-slate-100/50 transition-all duration-300">
  <div class="relative shrink-0">
    <img 
      src={author.avatar} 
      alt={author.name} 
      class="w-16 h-16 rounded-full object-cover ring-2 ring-white"
    />
    <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-slate-900 rounded-full flex items-center justify-center text-white text-xs font-bold border-2 border-white">
      {author.postCount}
    </div>
  </div>
  
  <div class="flex-1 min-w-0">
    <h3 class="font-bold text-slate-900 truncate group-hover:text-blue-600 transition-colors">
      {author.name}
    </h3>
    <p class="text-sm text-slate-500 line-clamp-1">
      {author.bio}
    </p>
  </div>
  
  <div class="shrink-0 w-8 h-8 rounded-full bg-slate-50 flex items-center justify-center text-slate-400 group-hover:bg-blue-50 group-hover:text-blue-600 transition-colors">
    <ArrowRight className="w-4 h-4" />
  </div>
</a>
