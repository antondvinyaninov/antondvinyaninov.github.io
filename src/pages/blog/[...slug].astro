---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const dateFormat = { year: 'numeric', month: 'long', day: 'numeric' };
---

<BaseLayout title={entry.data.title} description={entry.data.description} image={entry.data.image}>
  <article class="post-article">
    <header class="post-header container">
      <div class="header-content">
        <div class="post-meta">
          <time datetime={entry.data.pubDate.toISOString()}>
            {entry.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {entry.data.tags && (
            <>
              <span class="tags-separator">â€¢</span>
              {entry.data.tags.map(tag => (
                <span class="tag">#{tag}</span>
              ))}
            </>
          )}
        </div>
        
        <h1 class="post-title">{entry.data.title}</h1>
        <p class="post-lead">{entry.data.description}</p>
      </div>
    </header>

    <div class="container post-content">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .post-header {
    padding-top: var(--space-12);
    padding-bottom: var(--space-8);
    text-align: center;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-12);
    background: linear-gradient(to bottom, var(--color-uibg), transparent);
  }

  .header-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: var(--space-4);
  }

  .tags-separator {
    opacity: 0.5;
  }

  .tag {
    color: var(--color-primary);
    font-weight: 500;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    .post-title {
      font-size: 3.5rem;
    }
  }

  .post-lead {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .post-content {
    max-width: 720px;
    font-size: 1.125rem;
    line-height: 1.8;
  }

  /* Typography for markdown content */
  .post-content :global(h2) {
    font-size: 1.8rem;
    margin-top: var(--space-12);
    margin-bottom: var(--space-6);
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .post-content :global(p) {
    margin-bottom: var(--space-6);
    color: var(--color-text-muted);
  }

  .post-content :global(ul), .post-content :global(ol) {
    margin-bottom: var(--space-6);
    padding-left: var(--space-6);
    color: var(--color-text-muted);
  }
  
  .post-content :global(li) {
    margin-bottom: var(--space-2);
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-6);
    margin: var(--space-8) 0;
    font-style: italic;
    font-size: 1.25rem;
    color: var(--color-text);
  }
  
  .post-content :global(pre) {
    background-color: #1e1e1e;
    padding: var(--space-4);
    border-radius: var(--space-2);
    overflow-x: auto;
    margin-bottom: var(--space-8);
    font-size: 0.9rem;
  }
  
  .post-content :global(code) {
    font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
  }

  .post-content :global(p code) {
    background-color: var(--color-uibg);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--color-primary);
  }
  
  .post-content :global(img) {
    border-radius: var(--space-2);
    margin: var(--space-8) 0;
  }
</style>
